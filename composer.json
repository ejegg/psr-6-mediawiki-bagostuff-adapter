{
  "name": "addshore/psr-6-mediawiki-bagostuff-adapter",
  "type": "library",
  "description": "A MediaWiki BagOStuff PSR-6 adapter library",
  "keywords": ["Mediawiki", "Cache"],
  "license": "GPL-2.0+",
  "authors": [
    {
      "name": "Addshore"
    }
  ],
  "require": {
    "psr/cache": "^3.0",
    "php": "^8.2"
  },
  "require-dev": {
    "php-parallel-lint/php-parallel-lint": "^1.4",
    "mediawiki/mediawiki-codesniffer": "47.0",
    "phpunit/phpunit": "~9.6"
  },
  "scripts": {
    "lint": "parallel-lint . --exclude vendor",
    "sniff": "phpcs -ps",
    "phpunit": "phpunit",
    "phpunit-unit": "phpunit --testsuite unit",
    "phpunit-integration": "phpunit --testsuite integration",
    "test": [
      "@lint",
      "@sniff",
      "@phpunit"
    ],
    "ci": [
      "@lint",
      "@sniff",
      "phpunit --coverage-clover=coverage.clover"
    ]
  },
  "autoload": {
    "psr-4": {
      "Addshore\\Psr\\Cache\\MWBagOStuffAdapter\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Mediawiki\\Api\\Test\\": ["tests/integration", "tests/unit"]
    }
  }
}
